
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isUserAuthenticated() {
      return request.auth != null;
    }

    // Função para verificar se o usuário autenticado é um administrador.
    // Lê o documento do próprio usuário para checar o campo 'role'.
    function isUserAdmin() {
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // Regras para a coleção 'users'
    match /users/{userId} {
      // Um usuário pode ler e escrever em seu próprio documento.
      // Um administrador também pode ler e escrever em qualquer documento de usuário.
      allow read, write: if request.auth.uid == userId || isUserAdmin();
    }
    
    // Regras para a coleção 'studies' (Estudos do Admin)
    match /studies/{studyId} {
      // REGRAS DE LEITURA:
      // 1. Permite a leitura se o estudo estiver com status 'PUBLISHED'. (Acesso público)
      // 2. OU, se o usuário for um ADMIN (permite ver rascunhos, etc.).
      allow read: if resource.data.status == 'PUBLISHED' || isUserAdmin();
      
      // REGRAS DE ESCRITA (criar, atualizar, deletar):
      // Apenas administradores podem escrever na coleção de estudos.
      allow write: if isUserAdmin();
    }

    // Regras para a coleção 'sharedContent' (Ponte da Esperança)
    match /sharedContent/{contentId} {
      // Qualquer pessoa pode ler o conteúdo compartilhado.
      allow read: if true;
      // Apenas usuários autenticados podem criar conteúdo.
      allow write: if isUserAuthenticated();
    }
    
    // Nega todas as outras leituras e escritas por padrão.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
