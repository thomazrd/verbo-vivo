rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- User Data ---
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // --- Shareable Content (Ponte da Esperan√ßa) ---
    match /sharedContent/{contentId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Only creator can delete (update status)
      allow update: if request.auth.uid == resource.data.creatorId;
    }

    // --- Bible Study Plans, Journal, Meditations, Prayers ---
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // --- Prayer Circles ---
    match /prayerCircles/{circleId} {
      // Allow read only for members
      allow read: if request.auth.uid in resource.data.members;
      // Allow any authenticated user to create a circle
      allow create: if request.auth != null;
      // Allow update (join) for any authenticated user, but only creator can change other details
      allow update: if request.auth != null;
    }

    match /prayerRequests/{requestId} {
      // Allow read for members of the circle the request belongs to
      allow read: if get(/databases/$(database)/documents/prayerCircles/$(resource.data.circleId)).data.members.includes(request.auth.uid);
      // Allow write if user is the author
      allow write: if request.auth.uid == request.resource.data.authorId;
      // Allow update (praying) if user is a member of the circle
      allow update: if get(/databases/$(database)/documents/prayerCircles/$(resource.data.circleId)).data.members.includes(request.auth.uid);
    }
    
    // --- Congregations & Community Feed ---
    
    // Function to check if a user is a member of a congregation
    function isCongregationMember(congregationId) {
      return exists(/databases/$(database)/documents/congregations/$(congregationId)/members/$(request.auth.uid));
    }
    
    // Function to check if a user is an admin of a congregation
    function isCongregationAdmin(congregationId) {
       return get(/databases/$(database)/documents/congregations/$(congregationId)).data.admins[request.auth.uid] == true;
    }

    match /congregations/{congregationId} {
      // Any authenticated user can query/read congregations (to find one to join)
      allow read: if request.auth != null;
      // Any authenticated user can create a congregation
      allow create: if request.auth != null;
      // Only admins can update congregation details
      allow update: if isCongregationAdmin(congregationId);
    }
    
    match /congregations/{congregationId}/members/{memberId} {
       // Admins can manage members (approve/reject), users can request to join
       allow write: if isCongregationAdmin(congregationId) || request.auth.uid == memberId;
       // Members of the congregation can see other members
       allow read: if isCongregationMember(congregationId);
    }

    match /congregations/{congregationId}/posts/{postId} {
      // Members can read/write posts
      allow read, write: if isCongregationMember(congregationId);
    }
    
    match /congregations/{congregationId}/posts/{postId}/comments/{commentId} {
      // Members can read/write comments on posts
      allow read, write: if isCongregationMember(congregationId);
    }
  }
}
