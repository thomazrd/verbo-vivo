rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite leitura pública para exibição no feed
    // Permite a escrita apenas se o usuário estiver autenticado e o caminho corresponder ao seu userId.
    match /media/{congId}/{userId}/{postId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
